{
  parser: "babel-eslint",
  extends: "airbnb",
  plugins: [
    "react",
    "jsx-a11y",
    "import"
  ],
  env: {
    browser: true,
    node: true,
    jest: true
  },
  rules: {
    "react/prefer-stateless-function": 0
  },
  settings: {
    "import/resolver": {
      webpack: {
        config: './configs/webpack.config.js'
      }
    }
  }
}
